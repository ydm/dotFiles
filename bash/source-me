# -*- mode: Shell-script -*-
#
# Append this file to ~/.bashrc or add source ~/dotFiles/bash/source-me
#

# prompt
PS1='[\u@\h \w]\$ '

# source all dotFiles that start with _bash
for f in $HOME/dotFiles/bash/bash_*; do
    source $f
done

# add bin and wannabin to PATH
export PATH=$PATH:$HOME/bin:$HOME/dotFiles/wannabin

# SVN Editor
export SVN_EDITOR=emacs
